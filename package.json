{
  "name": "notion-bot",
  "version": "1.0.0",
  "description": "Telegram bot for Notion task management",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "health": "node -e \"require('dotenv').config(); const {runHealthCheck,formatHealthReport}=require('./src/notion/health'); runHealthCheck().then(r=>console.log(formatHealthReport(r)))\"",
    "tasks": "node -e \"require('dotenv').config(); const {getTodayTasks,formatTodayTasks}=require('./src/commands/todayTasks'); getTodayTasks(5).then(t=>console.log(formatTodayTasks(t)))\""
  },
  "dependencies": {
    "@google/generative-ai": "^0.3.1",
    "@notionhq/client": "^5.9.0",
    "dayjs": "^1.11.9",
    "dotenv": "^17.2.3",
    "telegraf": "^4.12.0"
  }
}
