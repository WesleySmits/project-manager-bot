# Project Manager Bot Secrets
# Get your token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
ALLOWED_ORIGIN=your_allowed_origin_here

# Notion Integration
# Create an internal integration at https://www.notion.so/my-integrations
NOTION_TOKEN=your_notion_integration_token_here
# The IDs below are found in the Notion database URLs
NOTION_TASKS_DB=your_notion_tasks_db_id_here
NOTION_PROJECTS_DB=your_notion_projects_db_id_here
NOTION_GOALS_DB=your_notion_goals_db_id_here

# Google AI
# Get your API key from https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_DEVELOPER_KNOWLEDGE_API_KEY=your_google_developer_knowledge_api_key_here

# Basic Authentication (for Web Interface)
BASIC_AUTH_USER=admin
BASIC_AUTH_PASS=choose_a_strong_password_here

# Internal API Security
# Generate a random 64-character hex string for API_KEY and JWT_SECRET
API_KEY=generate_a_random_hex_string_here
JWT_SECRET=generate_another_random_hex_string_here

# Server Configuration
PORT=3301
NODE_ENV=development
